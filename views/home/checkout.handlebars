<!-- Checkout Section -->
<section class="checkout-container">
    <h1 class="products__title">Proceso de compra</h1>
    <div class="checkout-box-final">
        <div class="checkout-customer">

            <form id="checkout-form" class="checkout-form" action="/pay" method="POST">

                <label class="checkout-label">Nombre completo * :</label>
                <input required class="checkout-input" type="text" name="customerName" placeholder="Ingrese su nombre">

                <label class="checkout-label">Correo electrónico * :</label>
                <input required class="checkout-input" type="email" name="emailAddress"
                    placeholder="Introduzca la dirección de correo electrónico">

                <label class="checkout-label">Número de teléfono * :</label>
                <input minlength="11" maxlength="11" class="checkout-input" type="text" name="cellNumber"
                    placeholder="Introduce tu número de móvil">

                <label class="checkout-label">País de envío * :</label>
                <select class="checkout-select" name="shippingCountry" id="">
                    <option value="Spain">Spain</option>
                    <option value="GB">United Kingdom</option>
                    <option value="AL">Albania</option>
                    <option value="AD">Andorra</option>
                    <option value="AT">Austria</option>
                    <option value="BY">Belarus</option>
                    <option value="BE">Belgium</option>
                    <option value="BA">Bosnia and Herzegovina</option>
                    <option value="BG">Bulgaria</option>
                    <option value="HR">Croatia (Hrvatska)</option>
                    <option value="CY">Cyprus</option>
                    <option value="CZ">Czech Republic</option>
                    <option value="FR">France</option>
                    <option value="GI">Gibraltar</option>
                    <option value="DE">Germany</option>
                    <option value="GR">Greece</option>
                    <option value="VA">Holy See (Vatican City State)</option>
                    <option value="HU">Hungary</option>
                    <option value="IT">Italy</option>
                    <option value="LI">Liechtenstein</option>
                    <option value="LU">Luxembourg</option>
                    <option value="MK">Macedonia</option>
                    <option value="MT">Malta</option>
                    <option value="MD">Moldova</option>
                    <option value="MC">Monaco</option>
                    <option value="ME">Montenegro</option>
                    <option value="NL">Netherlands</option>
                    <option value="PL">Poland</option>
                    <option value="PT">Portugal</option>
                    <option value="RO">Romania</option>
                    <option value="SM">San Marino</option>
                    <option value="RS">Serbia</option>
                    <option value="SK">Slovakia</option>
                    <option value="SI">Slovenia</option>
                    <option value="UA">Ukraine</option>
                    <option value="DK">Denmark</option>
                    <option value="EE">Estonia</option>
                    <option value="FO">Faroe Islands</option>
                    <option value="FI">Finland</option>
                    <option value="GL">Greenland</option>
                    <option value="IS">Iceland</option>
                    <option value="IE">Ireland</option>
                    <option value="LV">Latvia</option>
                    <option value="LT">Lithuania</option>
                    <option value="NO">Norway</option>
                    <option value="SJ">Svalbard and Jan Mayen Islands</option>
                    <option value="SE">Sweden</option>
                    <option value="CH">Switzerland</option>
                    <option value="TR">Turkey</option>
                </select>

                <label class="checkout-label">Ciudad de envío * :</label>
                <input required class="checkout-input" type="text" name="shippingCity" placeholder="Entrar ciudad">
                

                <label class="checkout-label">Código postal * :</label>
                <input required class="checkout-input" type="number" name="shippingZIP" placeholder="Ingresa tu código postal">


                <label class="checkout-label">Detalles de la dirección de envío * :</label>
                <textarea required class="checkout-input" name="shippingAddress" cols="30" rows="3"
                    placeholder="Ingrese a la calle, apartamento, etc."></textarea>

                {{!-- <label class="checkout-label">Create New Password * :</label>
                    <input required class="checkout-input" type="password" name="password" id="" placeholder="Crear una nueva contraseña"> --}}

            </form>

        </div>
        <div class="checkout-product">
            <table class="table">
                <thead class="checkout-thead">
                    <tr>
                        <th>Detalles del pedido</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each cart}}
                        <td class="twin"> <span class="align-left">{{productName}}</span> <span class="align-left">
                                {{productQuantity}} x {{productPrice}}€ </span> <span class="align-left">
                                <script>document.write({{ productPrice }} * {{ productQuantity }})</script>€</span> </td>
                        {{/each}}
                        <td class="twin"> <span class="align-left"></span> <span class="align-left">Discount:</span> <span
                                class="align-left">{{discount}}%</span> </td>
                        <td class="twin"> <span class="align-left"></span> <span class="align-left">Total:</span> <span
                                class="align-left">{{#cartTotalCheckout cart discount}} {{/cartTotalCheckout}}€</span> </td>

                    </tr>
                </tbody>
            </table>

            <div class="coupon-box">
                <form id="coupon" style="width: 60%;" action="/coupon" method="POST">  
                <input name="couponCode" style="width: 100%; margin-bottom: 1rem;" placeholder="Código promocional" class="checkout-input" type="text" name="" required>
                </form>

                <button type="submit" style="curson: pointer;" form="coupon" class="coupon-button">Canjear código</button>
            </div>
            <p style="font-size: 1.3rem;">*Si tiene un cupón, canjéelo primero antes de completar otros detalles de pago</p>

        </div>

    </div>

    <button form="checkout-form" class="paypal-checkout-button"><svg class="paypal-checkout-button--icon"
            aria-hidden="true" focusable="false" data-prefix="far" data-icon="credit-card" role="img"
            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="svg-inline--fa fa-credit-card fa-w-18">
            <path fill="currentColor"
                d="M527.9 32H48.1C21.5 32 0 53.5 0 80v352c0 26.5 21.5 48 48.1 48h479.8c26.6 0 48.1-21.5 48.1-48V80c0-26.5-21.5-48-48.1-48zM54.1 80h467.8c3.3 0 6 2.7 6 6v42H48.1V86c0-3.3 2.7-6 6-6zm467.8 352H54.1c-3.3 0-6-2.7-6-6V256h479.8v170c0 3.3-2.7 6-6 6zM192 332v40c0 6.6-5.4 12-12 12h-72c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h72c6.6 0 12 5.4 12 12zm192 0v40c0 6.6-5.4 12-12 12H236c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h136c6.6 0 12 5.4 12 12z">
            </path>
        </svg> Confirmar pedido y pagar</button>
</section>